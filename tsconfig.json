//typescript compile的相關定義

{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false //預設為false，表示會將不知道型態的變數設為any，若為true，則依樣會產生javscript但會出現錯誤
  }
}
