{
  "name": "angular2-quickstart",
  "version": "1.0.0",
  "scripts": {
    "start": "tsc&& concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "lite": "lite-server",
    "postinstall": "typings install",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "clean": "rimraf dist",
    "assests": " mkdirp  dist/app && cp app/*.{html,css,json} dist/app",
    "build": " npm run clean && npm run assests  && gulp build && npm run lite",
    "build:vendor": "gulp build:vendor  ",
    "build:bundle": "gulp build:bundle && uglifyjs build/bundle.js",
    "minify:js": "uglifyjs dist/*.js --screw-ie8 --compress --mangle ",
    "build:app": "gulp build:app",
    "browserify": "browserify app/main.js -o app/bundle.js |uglifyjs && echo 'finished",
    "clean:build": "rimraf build",
    "assests:build": "mkdirp  build/app && cp app/*.{html,json} build/app/",
    "concat:vendor": "concat-cli -f  node_modules/reflect-metadata/Reflect.js node_modules/zone.js/dist/zone.js   node_modules/systemjs/dist/system.src.js node_modules/core-js/client/shim.min.js -o build/vendor.min.js ",
    "build:js": "npm run concat:vendor && npm run build:bundle && uglifyjs-folder  build -o",
    "build:jss":"npm run build:bundle &&  uglifyjs-folder  build -o ",
    "minify:css": "cleancss style.css ",
    "rev": "useref index.html build/index.html ",
    "build:build": " npm run clean:build && npm run assests:build&&  npm run rev &&  npm run minify:css && npm run build:jss "
  },
  "license": "ISC",
  "dependencies": {
    "@angular/common": "2.0.0-rc.5",
    "@angular/compiler": "2.0.0-rc.5",
    "@angular/core": "2.0.0-rc.5",
    "@angular/forms": "0.3.0",
    "@angular/http": "2.0.0-rc.5",
    "@angular/platform-browser": "2.0.0-rc.5",
    "@angular/platform-browser-dynamic": "2.0.0-rc.5",
    "@angular/router": "3.0.0-rc.1",
    "@angular/router-deprecated": "2.0.0-rc.2",
    "@angular/upgrade": "2.0.0-rc.5",
    "systemjs": "0.19.27",
    "core-js": "^2.4.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "zone.js": "^0.6.12",
    "angular2-in-memory-web-api": "0.0.15",
    "bootstrap": "^3.3.6"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "clean-css": "^3.4.19",
    "concat": "0.0.1-security",
    "concat-glob-cli": "^0.1.0",
    "concurrently": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-add-src": "^0.2.0",
    "gulp-concat": "^2.6.0",
    "gulp-html-replace": "^1.6.1",
    "gulp-if": "^2.0.1",
    "gulp-minify-css": "^1.2.4",
    "gulp-rev": "^7.1.2",
    "gulp-rev-replace": "^0.4.3",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^2.0.0",
    "gulp-useref": "^3.1.2",
    "hash-cli": "^0.1.1",
    "lite-server": "^2.2.0",
    "mkdirp": "^0.5.1",
    "node-rev": "^1.2.0",
    "node-useref": "^0.3.15",
    "rev-append": "0.0.1",
    "rev-cli": "^1.1.2",
    "rev-static": "^1.2.0",
    "systemjs-builder": "^0.15.31",
    "typescript": "^1.8.10",
    "typings": "^1.0.4",
    "typings-core": "^1.4.1",
    "uglify-js": "^2.7.3",
    "uglifyjs-folder": "^0.2.1",
  
    "useref-file": "^0.2.1"
  }
}
